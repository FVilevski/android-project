<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vilevski.android.games.vimemory"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="vilevski.android.games.vimemory.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="vilevski.android.games.vimemory.NewGameActivity"
            android:label="@string/title_activity_new_game"
            android:parentActivityName="vilevski.android.games.vimemory.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="vilevski.android.games.vimemory.MainActivity" />
        </activity>
        <activity
            android:name="vilevski.android.games.vimemory.HighScoresActivity"
            android:label="@string/title_activity_high_scores" >
        </activity>

       <service 
           android:enabled="true" 
           android:name="vilevski.android.games.vimemory.classes.DownloadScoresService"
           > 
       </service>

        <activity
            android:name="vilevski.android.games.vimemory.PlayActivity"
            android:label="@string/title_activity_play" >
        </activity>
    </application>

</manifest>